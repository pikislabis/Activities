<% content_for (:activity_nav) do %>
	<ul>
		<li><%= link_to 'Usuarios', :controller => 'users', :action => 'list' %></li>
		<li class="selected"><%= link_to 'Proyectos', :controller => 'projects', :action => 'index' %></li>
		<li><%= link_to 'Actividades', :controller => 'activities', :action => 'index' %></li>
		<% if User.find(session[:user_id]).has_role?('admin') %>
			<li><%= link_to 'Permisos', :controller => 'users', :action => 'permissions' %></li>
		<% end %>
	</ul>
<% end %>

<% if @projects.empty? %>
	
	<h2>No existe ningun proyecto.</h2>

<% else %>

	<ul class="users_list">
		<% for project in @projects %>
		   		<li>
		   			<label>
			   			<%= link_to project.name, :controller => 'projects', :action => 'show', :id => project.id %>
			   			<% if @user_logged.has_role?('admin') %>
				   			<span class="act_desc">
								<%= link_to image_tag('/images/delete.gif'), project, :controller => 'projects', 
														:method => :delete, 
														:confirm => '¿Está seguro de querer eliminar esta actividad?'
								%>
							</span>
						<% end %>
			   			<br/>
			   			<span class="help"><%= project.description %></span>
			   		</label>
			   		<div class="user_name">
			    		<%= project.user.name %>
			    	</div>
		   		</li>
	    <% end %>
	</ul>
	<%= will_paginate @projects %>
<% end %>
