<% content_for (:activity_nav) do %>
	<ul>
			<li class="selected"><%= link_to 'Usuarios', admin_users_path %></li>
			<li><%= link_to 'Proyectos', admin_projects_path %></li>
			<li><%= link_to 'Actividades', admin_activities_path %></li>
			<% if @user_logged.has_role?('admin') %>
				<li><%= link_to 'Permisos', :controller => 'users', :action => 'permissions' %></li>
			<% end %>
	</ul>
<% end %>
<%content_for (:action_nav) do %>
	<ul>
		<li><%= link_to 'Perfil', :controller => 'users', :action => 'show', :id => @user.id %></li>
		<li class="selected2">
			<%= link_to 'Proyectos', :controller => 'users', :action => 'edit_proj', :id => @user.id %>
		</li>
		<li><%= link_to 'Hoja actividades', :controller => 'users', :action => 'view_tasks', :id => @user.id %></li>
		<li><%= link_to 'Hoja gastos', :controller => 'users', :action => 'view_spendings', :id => @user.id %></li>
	</ul>
<% end %>

<div class="top">
	<h3><%= @user.name %></h3>
</div>

<div class="course-form">
	<%= error_messages_for :user %>
		
	<% form_for :user, :url => { :action => :save_user_proj, :id => @user.id } do |form| %>
		<table class="form_setting">
			<tr>
				<th>
					<label>Nombre</label>
				</th>
				<td>
					<%= @user.long_name %>
				</td>
			</tr>
			<tr>
				<th>
					<label>Proyectos</label>
				</th>
				<td>
					<ul>
						<% for x in @projects %>
							<li>
								<%= x.name %>
								<% if @user_logged.has_role?('admin') %>
									<span class="act_desc">
										<%= link_to image_tag('/images/delete.gif'), :action => "delete_proj", 
																					 :id1 => @user.id, 
																					 :id2 => x.id
										%>
									</span>
								<% end %> 
							</li>
						<% end %>
					</ul>
				</td>
			</tr>
			<% if @user_logged.has_role?('admin') %>
				<tr>
					<th>
						<label>Seleccione un proyecto</label>
					</th>
					<td>
						<%= form.select :projects,
						 				@all_projects.collect {|p| [ p.name, p.id ] },
										:prompt => "Selecciona un proyecto",
				    					:selected => nil
						 %>
					</td>	
				</tr>
			<% end %>
		</table>
		
		<% if @user_logged.has_role?('admin') %>
			<p class="btns">
				<%= form.submit "Guardar" %>
			</p>
		<% end %>
	<% end %>
</div>
